---
import type { CollectionEntry } from 'astro:content';
import { getCollection, render } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_NAME, SITE_URL, SITE_AUTHOR } from '../../consts';

export async function getStaticPaths() {
	const compares = (await getCollection('compare')).filter((post) => post.data.draft !== true);
	return compares.map((compare) => ({
		params: { slug: compare.slug },
		props: compare,
	}));
}
type Props = CollectionEntry<'compare'>;

const compare = Astro.props;
const { Content } = await render(compare);
const { title, description, pubDate, updatedDate, heroImage, products, type, winner } = compare.data;

const jsonLd = {
	"@context": "https://schema.org",
	"@type": "Article",
	"headline": title,
	"description": description,
	"author": {
		"@type": "Person",
		"name": SITE_AUTHOR
	},
	"publisher": {
		"@type": "Organization",
		"name": SITE_NAME,
		"url": SITE_URL
	},
	"datePublished": pubDate.toISOString(),
	...(updatedDate && { "dateModified": updatedDate.toISOString() }),
};
---

<html lang="ko">
	<head>
		<BaseHead
			title={title}
			description={description}
			image={heroImage}
			type="article"
			articleDate={pubDate}
			articleModifiedDate={updatedDate}
		/>
		<script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray-500));
			}
			.compare-meta {
				display: flex;
				flex-wrap: wrap;
				justify-content: center;
				gap: 0.5rem;
				margin-bottom: 1rem;
			}
			.compare-meta span {
				font-size: 0.75rem;
				padding: 0.25rem 0.75rem;
				background: rgb(var(--gray-100));
				border-radius: 999px;
			}
			.winner-tag {
				background: rgb(var(--black)) !important;
				color: rgb(var(--white));
			}
			.products-list {
				display: flex;
				flex-wrap: wrap;
				justify-content: center;
				gap: 0.375rem;
				margin-bottom: 1rem;
			}
			.product-tag {
				font-size: 0.75rem;
				padding: 0.25rem 0.625rem;
				background: rgb(var(--gray-200));
				border-radius: 4px;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
						</div>
						<h1>{title}</h1>
						<div class="compare-meta">
							<span>{type}</span>
							{winner && <span class="winner-tag">추천: {winner}</span>}
						</div>
						<div class="products-list">
							{products.map((product) => (
								<span class="product-tag">{product}</span>
							))}
						</div>
						<hr />
					</div>
					<Content />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
