---
import { SITE_NAME } from '../consts';
---

<header>
	<nav>
		<a href="/" class="logo">{SITE_NAME}</a>
		<div class="nav-links">
			<a href="/review">리뷰</a>
			<a href="/compare">비교</a>
			<a href="/guide">가이드</a>
		</div>
	</nav>
</header>

<style>
	header {
		position: sticky;
		top: 0;
		z-index: 100;
		background: rgb(var(--white));
		border-bottom: 1px solid rgb(var(--gray-200));
	}

	nav {
		max-width: 1024px;
		margin: 0 auto;
		padding: 1rem 1.5rem;
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.logo {
		font-size: 1.25rem;
		font-weight: 800;
		text-decoration: none;
		letter-spacing: -0.02em;
	}

	.logo:hover {
		opacity: 1;
	}

	.nav-links {
		display: flex;
		gap: 2rem;
	}

	.nav-links a {
		font-size: 0.9375rem;
		font-weight: 500;
		text-decoration: none;
		color: rgb(var(--gray-600));
		transition: color 0.2s;
	}

	.nav-links a:hover {
		color: rgb(var(--black));
		opacity: 1;
	}

	@media (max-width: 640px) {
		nav {
			padding: 0.875rem 1rem;
		}

		.nav-links {
			gap: 1.5rem;
		}

		.nav-links a {
			font-size: 0.875rem;
		}
	}
</style>
