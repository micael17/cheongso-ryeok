---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';
import type { ImageMetadata } from 'astro';
import { SITE_NAME, SITE_TITLE, SITE_LOCALE, SITE_AUTHOR } from '../consts';

interface Props {
	title: string;
	description: string;
	image?: ImageMetadata;
	articleDate?: Date;
	articleModifiedDate?: Date;
	type?: 'website' | 'article';
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const {
	title,
	description,
	image,
	articleDate,
	articleModifiedDate,
	type = 'website'
} = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
	rel="alternate"
	type="application/rss+xml"
	title={SITE_TITLE}
	href={new URL('rss.xml', Astro.site)}
/>
<meta name="generator" content={Astro.generator} />

<!-- Font preloads -->
<link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="author" content={SITE_AUTHOR} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
{image && <meta property="og:image" content={new URL(image.src, Astro.url)} />}
<meta property="og:locale" content={SITE_LOCALE} />
<meta property="og:site_name" content={SITE_NAME} />

<!-- Article Meta Tags -->
{type === 'article' && articleDate && (
	<meta property="article:published_time" content={articleDate.toISOString()} />
)}
{type === 'article' && articleModifiedDate && (
	<meta property="article:modified_time" content={articleModifiedDate.toISOString()} />
)}
{type === 'article' && (
	<meta property="article:author" content={SITE_AUTHOR} />
)}

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
{image && <meta property="twitter:image" content={new URL(image.src, Astro.url)} />}
